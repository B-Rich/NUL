#!/usr/bin/env novaboot
# -*-sh-*-
QEMU_FLAGS=-cpu phenom -smp 2
HYPERVISOR_PARAMS=iommu serial spinner
bin/apps/sigma0.nul S0_DEFAULT hostserial hostvga:0x40000,0x40000 tracebuffer:32768 hostvesa hostkeyb:0+0x60+1+12+1 \
		    nubus host82576:0 host82576vf:0,0,1 service_config script_start:1 name::/s0/events
bin/apps/remote_config.nul
bin/apps/vancouver.nul
bin/boot/munich
imgs/passive/bzImage
imgs/passive/initramfs
bin/apps/remote_config.nulconfig <<EOF
namespace::/s0 name::/s0/events name::/s0/log name::/s0/timer name::/s0/fs/rom name::/s0/admission name::/s0/config sigma0::mem:64  quota::guid ||
rom://bin/apps/remote_config.nul linux:rom://linux.nulconfig
EOF
vancouver.nulconfig <<EOF
name::/s0/log name::/s0/admission name::/s0/events name::/s0/timer name::/s0/fs/rom sigma0::mem:256 sigma0::dma ||
rom:///boot/nul/vancouver.nul vga_fbsize:4096 kbmodifier:0x40000 PC_PS2 82576vf service_events ||
rom://bin/boot/munich
rom://linux/bzImage
rom://linux/initramfs
EOF
