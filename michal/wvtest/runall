#!/bin/sh

dir=$(dirname $0)
root=$(readlink -f $dir/../..)
tests=$(find $root -name '*.wv')
exitcode=0
for file in $tests; do
    set -x
    cmd="$dir/wvnulrun $file \"$@\""
    eval $cmd
    ret=$?
    set +x
    if [ "$ret" -ne 0 ]; then
	echo "! $0: '$cmd' returned non-zero exit code ($ret)  FAILED";
	exitcode=1
    fi
done
exit $exitcode
